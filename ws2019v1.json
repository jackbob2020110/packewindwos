{
  "builders": [
    {
      "boot_wait": "0m",
      "communicator": "winrm",
      "cpus": 2,
      "disk_size": "{{user `disk_size`}}",
      "enable_secure_boot": true,
      "enable_virtualization_extensions": true,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/disable-screensaver.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/unattend.xml",
        "./scripts/sysprep.bat"
      ],
      "guest_additions_mode": "disable",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "shutdown_command": "a:/sysprep.bat",
      "switch_name": "{{user `hyperv_switchname`}}",
      "type": "hyperv-iso",
      "vm_name": "windows_2019",
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant"
    },
    {
      "boot_wait": "2m",
      "communicator": "winrm",
      "cpus": 2,
      "disk_adapter_type": "lsisas1068",
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/unattend.xml",
        "./scripts/win-updates.ps1"
      ],
      "guest_os_type": "windows8srv-64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "skip_compaction": true,
      "type": "vmware-iso",
      "vm_name": "windows_2019",
      "vmx_data": {
        "RemoteDisplay.vnc.enabled": "false",
        "RemoteDisplay.vnc.port": "5900"
      },
      "vmx_remove_ethernet_interfaces": true,
      "vnc_port_max": 5980,
      "vnc_port_min": 5900,
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant"
    },
    {
      "boot_wait": "2m",
      "communicator": "winrm",
      "cpus": 2,
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/unattend.xml",
        "./scripts/win-updates.ps1"
      ],
      "guest_additions_mode": "disable",
      "guest_os_type": "Windows2019_64",
      "headless": "{{user `headless`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "type": "virtualbox-iso",
      "vm_name": "windows_2019",
      "winrm_password": "vagrant",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "winrm_username": "vagrant"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "windows_2019_v1_{{.Provider}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "./scripts/set-winrm-automatic.bat"

      ],
      "type": "windows-shell"
    },
    {
      "scripts": [
        "./scripts/disable-screensaver.ps1",
        "./scripts/set-powerplan.ps1",
        "./scripts/win2016/disable-antivirus.ps1",
        "./scripts/windows/disable_windows_background_services.ps1",
        "./scripts/windows/clean_windows.ps1"
        ],
      "type": "powershell"
    },
    {
      "scripts": [
        "./scripts/postInstall.ps1"
        
      ],
      "type": "powershell"
    },
    {
      "scripts": [
        "./scripts/compact.bat"
      ],
      "type": "windows-shell"
    }

  ],
  "variables": {
    "autounattend": "./answer_files/2019/Autounattend.xml",
    "disk_size": "204800",
    "disk_type_id": "1",
    "memory": "2048",
    "headless": "true",
    "hyperv_switchname": "{{env `hyperv_switchname`}}",
    "iso_checksum": "a876d230944abe3bf2b5c2b40da6c4a3",
    "iso_url": "d:\\iso\\en_win2019.iso",
    "winrm_timeout": "6h"
  }
}

